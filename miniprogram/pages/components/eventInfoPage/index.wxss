/* pages/components/eventInfo.wxss */
.image-container {
  width: 100%;
  height: 200rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.image-cover {
  width: 100%;
  height: 100%;
  background-color: rgba(242, 102, 126, 0.4);
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.title-wrapper {
  z-index: 20;
  margin: 16rpx;
  font-size: 32rpx;
}

.title {
  font-weight: bold;
  color: white;
  font-size: 48rpx;
}

.image-outline {
  border-left: 6rpx solid #64C0A9;
  border-bottom: 6rpx solid #64C0A9;
  margin-left: 16rpx;
  height: calc(100% - 88rpx);
  width: 100%;
  z-index: 20;
}

.image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.date-box {
  width: 110rpx;
  height: 140rpx;
  position: absolute;
  background-color: #64C0A9;
  left: calc(50% - 70rpx);
  bottom: -70rpx;
  z-index: 100;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.date-text {
  font-family: 'Dosis';
  color: white;
  font-size: 22rpx;
  display: block;
  line-height: 1.1em;
}

.day-text {
  font-size: 36rpx;
}

.time-text {
  width: 100%;
  text-align: center;
  margin-top: 15rpx;
  padding-top: 10rpx;
  position: relative;
}

.time-text:before {
  content : "";
  position: absolute;
  left    : 40%;
  top  : 0;
  height  : 1px;
  width   : 20%;
  border-top: 2rpx solid white;
}

.event-details {
  margin: 1rpx;
}

.at-sign {
  color: #64C0A9;
}