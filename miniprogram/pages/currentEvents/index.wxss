/* pages/currentEvents/index.wxss */
.list-wrapper {
  margin: 8rpx;
  margin-bottom: 180rpx;
}

.cell-wrapper {
  width: 100%;
}

.entry-wrapper {
  width: 100%;
  border-radius: 5rpx;
  background-color: white;
  margin-bottom: 8rpx;
  padding-bottom: 8rpx;
}

.image {
  width: 100%;
  height: 400rpx;
}

.image-container {
  width: 100%;
  position: relative;
  margin-bottom: 40rpx;
}

.date-box {
  width: 110rpx;
  height: 140rpx;
  position: absolute;
  background-color: #64C0A9;
  left: calc(50% - 70rpx);
  bottom: -35rpx;
  z-index: 100;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.date-text {
  font-family: 'Dosis';
  color: white;
  font-size: 22rpx;
  display: block;
  line-height: 1.1em;
}

.day-text {
  font-size: 36rpx;
}

.time-text {
  width: 100%;
  text-align: center;
  margin-top: 15rpx;
  padding-top: 10rpx;
  position: relative;
}

.time-text:before {
  content : "";
  position: absolute;
  left    : 40%;
  top  : 0;
  height  : 1px;
  width   : 20%;
  border-top: 2rpx solid white;
}

.title {
  color: #64C0A9;
  font-weight: bold;
  font-size: 28rpx;
  flex-grow: 1;
}

.info-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx;
  margin-top: 16rpx;
  align-items: center;
  padding-top: 8rpx;
}

.btn {
  font-size: 14rpx;
  width: 20rpx;
}

.signup-btn {
  background-color: #F2667E;
  color: white;
  font-size: 22rpx;
}

.modify-btn {
  background-color: #64C0A9;
  color: white;
  font-size: 22rpx;
}