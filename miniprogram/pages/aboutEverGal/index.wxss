/* miniprogram/pages/aboutEverGal/index.wxss */

.top_banner {
  position: relative;
  display: block;
  height: 1000rpx;
}

.hero_wrapper {
  background-color: #64C0A9;
  width: 75%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slogan_wrapper {
  display: flex;
  flex-direction: row;
  margin-top: 3em;
}

.slogan {
  margin-left: 0.5em;
  display: flex;
  flex-direction: column;
  font-size: 2em;
  font-family: 'Dosis';
  font-weight: lighter;
}

.slogan_bottom {
  display: flex;
  margin: 3em 3em 0 3.5em;
}

.image_cover {
  height: 100%;
  width: 25%;
  background-color: rgba(242, 102, 126, 0.4);
  z-index: 10;
  position: absolute;
  display: block;
  top: 0;
  left: 35%;
}

.top_banner_side {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: -150px;
  display: block;
}

.top_banner_side_image {
  height:100%;
  z-index: 0;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  margin: 16rpx;
  margin-left: 0;
}

.chinese_title {
  color: #fff;
}

.english_title {
  color: #fff;
  font-size: 1em;
  font-family: 'Dosis';
  font-weight: lighter;
}

.bottom_right_triangle {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 0 200px 400px;
  border-color: transparent transparent #f6f6f6 transparent;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 15;
}

.about_us_title {
  position: absolute;
  bottom: 60rpx;
  right: 3em;
  width: 150rpx;
  z-index: 20;
  width: 130rpx;
  height: 100rpx;
}

.dots {
  height: 75rpx;
  width: 2.5rpx;
  border-left: 2px dotted #fff;
  position: absolute;
  left: 1.5em;
  bottom: 6em;
  z-index: 30;
}

.instagram {
  position: absolute;
  left: calc(1.5em - 25rpx - 1px);
  bottom: 4em;
  z-index: 30;
  width: 50rpx;
  height: 50rpx;
}

.bottom_banner {
  background-color: #f6f6f6;
  display: block;
  margin: 1em 3em 0 3em;
  text-align: right;
}

.about_us_content {
  color: #000;
  font-family: 'Dosis';
  font-weight: lighter;
}

.signature {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-top: 3em;
  height: 100rpx;
}

.signature_intro {
  font-family: 'Dosis';
  font-weight: lighter;
  font-size: 0.8em;
  color: #999;
}

.signature_image {
  width: 100rpx;
  display: block;
  margin-left: 0.5em;
}

.bottom_image {
  display: flex;
  position: relative;
  width: 100%;
  justify-content: center;
}

.bottom_background_image {
  position: absolute;
  right: 0;
  top: 0;
  height: 1200rpx;
  width: 100%;
  z-index: -2;
}

.top-right-triangle {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 500px 250px 0;
  border-color: transparent #f6f6f6 transparent transparent;
  position: absolute;
  right: 0;
  top: 0;
  z-index: -1;
}

.bottom_team_image{
  margin: 4em 3em 3em 3em;
  z-index: 1;
  width: 100%;
  height: 400px;
}
